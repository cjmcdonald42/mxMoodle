{{!
    @template   local_mxschool/approve_deny_cell
    @package    local_mxschool
    @author     Cannon Caspar, Class of 2021 <jrdegreeff@mxschool.edu>
    @author     Charles J McDonald, Academic Technology Specialist <cjmcdonald@mxschool.edu>
    @copyright  20021 Middlesex School, 1400 Lowell Rd, Concord MA 01742 All Rights Reserved.
    @license    http://www.gnu.org/copyleft/gpl.html GNU GPL v3 or later

    The purpose of this template is to render a button with ajax functionality to approve or deny a row on a report

    Required context variables:
    - text | string | the text to display on the button
}}
<p class="mx-ad-text{{ id }}" style="font-weight:bold;text-decoration:underline;"></p>
<button
	type="button" class="mx-approve-button{{ id }} btn btn-primary d-print-none"
	name="{{ field }}" value="{{ id }}" style="background-color:mediumseagreen;border-color:mediumseagreen;">Approve
</button>
<button
	type="button" class="mx-deny-button{{ id }} btn btn-primary d-print-none"
	name="{{ table }}" value="{{ id }}" style="background-color:indianred;border-color:indianred;">Deny
</button>
<button
	type="button" class="mx-ad-undo-button{{ id }} btn btn-primary d-print-none"
	value="{{ id }}" style="background-color:dimgray;border-color:dimgray;">Undo
</button>

{{# js }}
    require(['local_mxschool/approve_deny_cell'], function(setup) {
        setup({{ id }}, {{ status }});
    });
{{/ js }}
